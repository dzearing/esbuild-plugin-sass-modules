{
  "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "outDir": "lib",
      "moduleResolution": "node",
      "lib": [
          "es2017",
          "es7",
          "es6",
          "dom"
      ],
      "downlevelIteration": true,
      "declaration": true,
      "declarationMap": true,
      "strict": true,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "jsx": "react",
      "skipLibCheck": true     
  },
  "include": ["src"]
}
